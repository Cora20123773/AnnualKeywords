/* 老虎机外壳 */
.slot-machine-container {
	position: relative;
	margin: 0 auto;
	padding-top: 305px;
	z-index: 1;
	width: 770rpx;
	height: 728rpx;
	background: transparent url(https://i.loli.net/2021/01/20/S2Fo4IJQlTbrRya.png) bottom center no-repeat;
	background-size: cover
}

.slot-machine-container .reel-container {
	position: absolute;
	left: 60rpx;
	top: 500rpx;
	width: 434rpx;
	height: 282rpx;
	overflow: hidden
}
/* 老虎机滚动条 */
.slot-machine-container .reel-container .reel {
	position: absolute;
	padding-left: -400px;
	width: 120rpx;
	height: 2160rpx;
	/* background-size: contain */
}

/* 不同的滚动条 */
