	background: url(https://i.loli.net/2021/01/20/alIknZwUpo1SVy8.png) 0 0 repeat-y;
	left: 150rpx
}

/* 中 */
.slot-machine-container .reel-container .reel1 {
	background: url(https://i.loli.net/2021/01/20/EFgr7LQk5tZqWAz.png) 0 0 repeat-y;
	left: 240rpx
}

/* 右 */
.slot-machine-container .reel-container .reel2 {
	background: url(https://i.loli.net/2021/01/20/SY6FsL1HAQweMq3.png) 0 0 repeat-y;
